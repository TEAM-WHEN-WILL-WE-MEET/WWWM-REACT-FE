{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/MonthView",
        "destination": "/MonthView/index.html"
      },
      {
        "source": "/individualCalendar",
        "destination": "/individualCalendar/index.html"
      },
      {
        "source": "/eventCalendar",
        "destination": "/eventCalendar/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}